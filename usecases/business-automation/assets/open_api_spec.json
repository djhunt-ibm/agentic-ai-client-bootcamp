{
  "openapi": "3.0.0",
  "info": {
    "title": "Product Information API",
    "description": "API for retrieving product titles and details",
    "version": "1.0.0"
  },
  "servers": [
    {
      "url": "https://product-app.1slrp41syyn5.us-south.codeengine.appdomain.cloud/"
    }
  ],
  "paths": {
    "/titles": {
      "get": {
        "summary": "Get product titles",
        "description": "Retrieve a list of product titles.",
        "responses": {
          "200": {
            "description": "A list of product titles.",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "additionalProperties": {
                    "type": "string"
                  }
                }
              }
            }
          }
        }
      }
    },
    "/product": {
      "get": {
        "summary": "Get product details by title",
        "description": "Retrieve detailed information of a product using its title.",
        "parameters": [
          {
            "name": "Title",
            "in": "query",
            "required": true,
            "schema": {
              "type": "string"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Successful response",
            "content": {
              "application/json": {
                "schema": {
                  "type": "string"
                }
              }
            }
          },
          "404": {
            "description": "Product not found",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "detail": {
                      "type": "string"
                    }
                  }
                }
              }
            }
          }
        }
      }
    }
  },
  "components": {
    "schemas": {
      "ProductInfo": {
        "type": "object",
        "properties": {
          "Title": {
            "type": "string"
          },
          "Info": {
            "type": "string"
          }
        }
      }
    },
    "securitySchemes": {
      "apiKeyAuth": {
        "type": "apiKey",
        "in": "header",
        "name": "X-API-KEY"
      }
    }
  },
  "security": [
    {
      "apiKeyAuth": []
    }
  ]
}
