{
    "openapi": "3.0.0",
    "info": {
        "title": "HR Automation",
        "description": "API for retrieving employee details and updating profile information",
        "version": "0.1.0"
    },
    "servers": [
        {
            "url": "https://hr-skills-app.1rqct68sp2fr.us-south.codeengine.appdomain.cloud",
            "description": "Production server"
        }
    ],
    "tags": [],
    "paths": {
        "/user_profile_details/{name}": {
            "get": {
                "summary": "Get User Profile",
                "operationId": "GetUserProfileDetails",
                "description": "Get complete profile data of user. First ask user their name, if it has not been provided yet. Once user provides name, invoke the tool and show user's profile data.",
                "parameters": [
                    {
                        "name": "name",
                        "in": "path",
                        "description": "The unique identifier of the user.",
                        "required": true,
                        "x-ibm-label": "Hello! What is your name?",
                        "schema": {
                            "type": "string",
                            "title": "Name"
                        }
                    }
                ],
                "responses": {
                    "200": {
                        "content": {
                            "application/json": {
                                "schema": {
    					"type": "object",
    					"properties": {
        					"name": {"type": "string"},
        					"title": {"type": "string"},
        					"address": {"type": "string"},
        					"time_off_balance": {"type": "integer"}
    							}
					}

                            }
                        },
                        "description": "Successful Response"
                    },
                    "422": {
                        "content": {
                            "application/json": {
                                "schema": {
                                    "$ref": "#/components/schemas/HTTPValidationError"
                                }
                            }
                        },
                        "description": "Validation Error"
                    }
                }
            }
        },
        "/time-off-balance/{name}": {
            "get": {
                "summary": "Get Time Off Balance",
                "description": "Get time off balance data. First ask user their name, if it has not been provided yet. Once user provides name, invoke the tool and show user's time off balance",
                "operationId": "GetTimeOffBalanceData",
                "parameters": [
                    {
                        "name": "name",
                        "in": "path",
                        "description": "The name of the user.",
                        "required": true,
                        "x-ibm-label": "Hello! What is your name?",
                        "schema": {
                            "type": "string",
                            "title": "Name"
                        }
                    }
                ],
                "responses": {
                    "200": {
                        "content": {
                            "application/json": {
                                "schema": {
    					"type": "string",
    					"description": "Remaining time-off balance as a single string."
				}
                            }
                        },
                        "description": "Successful Response"
                    },
                    "422": {
                        "content": {
                            "application/json": {
                                "schema": {
                                    "$ref": "#/components/schemas/HTTPValidationError"
                                }
                            }
                        },
                        "description": "Validation Error"
                    }
                }
            }
        },
        "/request-time-off": {
            "post": {
                "summary": "Request Time Off",
                "description": "Request time off, apply for leaves. First ask user their name, if it has not been provided yet. Once user provides name, ask start date of leaves and end date of leaves , then invoke the tool and show the response.",
                "operationId": "ToRequestTimeOff",
                "responses": {
                    "200": {
                        "content": {
                            "application/json": {
                                "schema": {
    					"type": "string",
    					"description": "Confirmation message as a single string."
				}
                            }
                        },
                        "description": "Successful Response"
                    },
                    "422": {
                        "content": {
                            "application/json": {
                                "schema": {
                                    "$ref": "#/components/schemas/HTTPValidationError"
                                }
                            }
                        },
                        "description": "Validation Error"
                    }
                },
                "requestBody": {
                    "required": true,
                    "content": {
                        "application/json": {
                            "schema": {
                                "$ref": "#/components/schemas/TimeOffRequest"
                            }
                        }
                    }
                }
            }
        },
        "/update-title": {
            "put": {
                "summary": "Update Title",
                "description": "Update user title. First ask user their name, if it has not been provided yet. Once user provides name, ask user their new title, then invoke the tool and show response.",
                "operationId": "ToUpdateTitle",
                "responses": {
                    "200": {
                        "content": {
                            "application/json": {
                                "schema": {
    					"type": "string",
    					"description": "Confirmation message as a single string."
				}
                            }
                        },
                        "description": "Successful Response"
                    },
                    "422": {
                        "content": {
                            "application/json": {
                                "schema": {
                                    "$ref": "#/components/schemas/HTTPValidationError"
                                }
                            }
                        },
                        "description": "Validation Error"
                    }
                },
                "requestBody": {
                    "required": true,
                    "content": {
                        "application/json": {
                            "schema": {
                                "$ref": "#/components/schemas/UpdateTitleRequest"
                            }
                        }
                    }
                }
            }
        },
        "/update-address": {
            "put": {
                "summary": "Update Address",
                "description": "Update user address. First ask user their name, if it has not been provided yet. Once user provides name, ask user their new address, then invoke the tool and show response.",
                "operationId": "ToUpdateAddress",
                "responses": {
                    "200": {
                        "content": {
                            "application/json": {
                                "schema": {
    					"type": "string",
   					"description": "Confirmation message as a single string."
					}
                            }
                        },
                        "description": "Successful Response"
                    },
                    "422": {
                        "content": {
                            "application/json": {
                                "schema": {
                                    "$ref": "#/components/schemas/HTTPValidationError"
                                }
                            }
                        },
                        "description": "Validation Error"
                    }
                },
                "requestBody": {
                    "required": true,
                    "content": {
                        "application/json": {
                            "schema": {
                                "$ref": "#/components/schemas/UpdateAddressRequest"
                            }
                        }
                    }
                }
            }
        },
        "/create-user": {
            "post": {
                "responses": {
                    "200": {
                        "content": {
                            "application/json": {
                                "schema": {
    					"type": "string",
    					"description": "Confirmation message including user ID as a single string."
					}

                            }
                        },
                        "description": "Successful Response"
                    },
                    "422": {
                        "content": {
                            "application/json": {
                                "schema": {
                                    "$ref": "#/components/schemas/HTTPValidationError"
                                }
                            }
                        },
                        "description": "Validation Error"
                    }
                },
                "requestBody": {
                    "required": true,
                    "content": {
                        "application/json": {
                            "schema": {
                                "$ref": "#/components/schemas/CreateUserRequest"
                            }
                        }
                    }
                },
                "summary": "Create User",
                "operationId": "ToCreateUser"
            }
        }
    },
    "components": {
        "schemas": {
            "CreateUserRequest": {
                "type": "object",
                "properties": {
                    "name": {
                        "type": "string",
                        "description": "Full name of the user.",
                        "title": "Name"
                    },
                    "time_off_balance": {
                        "type": "integer",
                        "description": "Initial time-off balance in days.",
                        "title": "Time Off Balance"
                    },
                    "title": {
                        "type": "string",
                        "description": "Job title of the user.",
                        "title": "Title"
                    },
                    "address": {
                        "type": "string",
                        "description": "Address of the user.",
                        "title": "Address"
                    }
                },
                "required": [
                    "name",
                    "time_off_balance",
                    "title",
                    "address"
                ],
                "title": "CreateUserRequest"
            },
            "HTTPValidationError": {
                "type": "object",
                "properties": {
                    "detail": {
                        "type": "array",
                        "items": {
                            "$ref": "#/components/schemas/ValidationError"
                        },
                        "description": "List of validation errors.",
                        "title": "Detail"
                    }
                },
                "title": "HTTPValidationError"
            },
            "TimeOffRequest": {
                "type": "object",
                "properties": {
                    "name": {
                        "type": "string",
                        "description": "The name of the user.",
                        "title": "Name",
                        "x-ibm-order": 1,
                        "x-ibm-label": "Hello! What is your name?"
                    },
                    "from_date": {
                        "type": "string",
                        "description": "Start date of the time-off request (YYYY-MM-DD).",
                        "format": "date",
                        "title": "From Date",
                        "x-ibm-order": 2
                    },
                    "to_date": {
                        "type": "string",
                        "description": "End date of the time-off request (YYYY-MM-DD).",
                        "format": "date",
                        "title": "To Date",
                        "x-ibm-order": 3
                    }
                },
                "required": [
                    "name",
                    "from_date",
                    "to_date"
                ],
                "title": "TimeOffRequest"
            },
            "UpdateAddressRequest": {
                "type": "object",
                "properties": {
                    "name": {
                        "type": "string",
                        "description": "The name of the user.",
                        "title": "Name",
                        "x-ibm-label": "Hello! What is your name?"
                    },
                    "new_address": {
                        "type": "string",
                        "description": "The updated address of the user.",
                        "title": "New Address",
                        "x-ibm-label": "What is your new address?"
                    }
                },
                "required": [
                    "name",
                    "new_address"
                ],
                "title": "UpdateAddressRequest"
            },
            "UpdateTitleRequest": {
                "type": "object",
                "properties": {
                    "name": {
                        "type": "string",
                        "description": "The name of the user.",
                        "title": "Name",
                        "x-ibm-label": "Hello! What is your name?"
                    },
                    "new_title": {
                        "type": "string",
                        "description": "The updated job title of the user.",
                        "title": "New Title",
                        "x-ibm-label": "What's your new title?"
                    }
                },
                "required": [
                    "name",
                    "new_title"
                ],
                "title": "UpdateTitleRequest"
            },
            "ValidationError": {
                "type": "object",
                "properties": {
                    "loc": {
                        "type": "array",
                        "items": {
                            "anyOf": [
                                {
                                    "type": "string"
                                },
                                {
                                    "type": "integer"
                                }
                            ]
                        },
                        "description": "The location of the error in the request.",
                        "title": "Location"
                    },
                    "msg": {
                        "type": "string",
                        "description": "A message describing the error.",
                        "title": "Message"
                    },
                    "type": {
                        "type": "string",
                        "description": "The type of error.",
                        "title": "Error Type"
                    }
                },
                "required": [
                    "loc",
                    "msg",
                    "type"
                ],
                "title": "ValidationError"
            }
        }
    }
}