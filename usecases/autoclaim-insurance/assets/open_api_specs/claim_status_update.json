{
    "openapi": "3.0.3",
    "info": {
      "title": "Auto Insurance Claim API",
      "version": "1.0.0",
      "description": "API to update the status of an insurance claim."
    },
    "servers": [
      {
        "url": "https://auto-insurance-fetch-insert-details.1v25kydgpc85.us-east.codeengine.appdomain.cloud",
        "description": "Production server"
      }
    ],
    "paths": {
      "/update_claim_status": {
        "post": {
          "summary": "Update Claim Status",
          "description": "Updates the status of a claim using claim number and new status as query parameters.",
          "operationId": "updateClaimStatus",
          "parameters": [
            {
              "name": "claim_status",
              "in": "query",
              "required": true,
              "schema": {
                "type": "string",
                "enum": ["Open", "In Progress", "Closed", "Rejected"]
              },
              "description": "The new status of the claim."
            },
            {
              "name": "claim_number",
              "in": "query",
              "required": true,
              "schema": {
                "type": "string"
              },
              "description": "Unique identifier for the claim."
            }
          ],
          "responses": {
            "200": {
              "description": "Claim status updated successfully.",
              "content": {
                "application/json": {
                  "schema": {
                    "type": "object",
                    "properties": {
                      "message": {
                        "type": "string"
                      },
                      "claim_number": {
                        "type": "string"
                      },
                      "new_status": {
                        "type": "string"
                      }
                    }
                  }
                }
              }
            },
            "400": {
              "description": "Invalid input parameters."
            },
            "500": {
              "description": "Internal server error."
            }
          }
        }
      }
    }
  }
  