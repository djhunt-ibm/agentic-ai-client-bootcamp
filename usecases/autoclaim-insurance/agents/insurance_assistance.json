{
    "openapi": "3.0.0",
    "info": {
      "title": "Insurance Claim Processing API",
      "version": "1.0.0",
      "description": "API for processing insurance claims, generating policy recommendations, and sending emails."
    },
    "servers": [
        {
          "url": "https://auto-insurance-recommendation.1truewgi7yuo.us-east.codeengine.appdomain.cloud/",
          "description": "IBM Code Engine Server"
        }
      ],
    "paths": {
      "/process_claims": {
        "post": {
          "summary": "Process Claims",
          "operationId": "process_claims",
          "requestBody": {
            "required": true,
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/FilePaths"
                }
              }
            }
          },
          "responses": {
            "200": {
              "description": "Claims processed successfully",
              "content": {
                "application/json": {
                  "schema": {
                    "$ref": "#/components/schemas/ClaimResponse"
                  }
                }
              }
            },
            "500": {
              "description": "Internal server error"
            }
          }
        }
      }
    },

    "components": {

      "securitySchemes":{

      "provider_basic_auth": {
        "type": "http",
        "scheme": "basic"
      }
      },
      "schemas": {
        "FilePaths": {
          "type": "object",
          "properties": {
            "claim_file": {
              "type": "string",
              "description": "Path to the claim JSON file"
            },
            "policy_file": {
              "type": "string",
              "description": "Path to the policy JSON file"
            }
          },
          "required": ["claim_file", "policy_file"]
        },
        "ClaimResponse": {
          "type": "object",
          "properties": {
            "status": {
              "type": "string",
              "description": "Status of the claim processing"
            },
            "policy_recommendation": {
              "type": "string",
              "description": "Recommended policy details based on claim"
            },
            "customer_email": {
              "type": "string",
              "description": "Generated email to customer with policy recommendation"
            },
            "finanace_team_email": {
              "type": "string",
              "description": "Generated email to finance team for claim approval"
            },
            "agents_token_usage": {
              "type": "object",
              "properties": {
                "total_tokens": {
                  "type": "integer"
                },
                "prompt_tokens": {
                  "type": "integer"
                },
                "cached_prompt_tokens": {
                  "type": "integer"
                },
                "completion_tokens": {
                  "type": "integer"
                },
                "successful_requests": {
                  "type": "integer"
                }
              }
            }
          }
        }
      }
    },
    "security": [
      {
        "provider_basic_auth": []
      }
    ]
  }
  